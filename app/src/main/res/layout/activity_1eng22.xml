            android:ems="10"
            android:gravity="center"
            android:hint="@string/sub20106"
            android:importantForAutofill="no"
            style="@style/editText"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editTextNumberDecimal7"
            android:layout_width="wrap_content"
