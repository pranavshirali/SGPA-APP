<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".OptionScreen$activity_3eng21"
        tools:ignore="ExtraText">

        <TextView
            android:id="@+id/textView"
            android:layout_width="403dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:gravity="start"
            android:text="@string/selected_option"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck"
            style="@style/editText"/>

        <EditText
            android:id="@+id/editTextNumberDecimal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_border"
            android:gravity="center"
            android:hint="@string/sub20201"
            android:importantForAutofill="no"
            android:minHeight="48dp"
            style="@style/editText" />

        <EditText
            android:id="@+id/editTextNumberDecimal2"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_border"
            android:gravity="center"
            android:hint="@string/sub20202"
            android:importantForAutofill="no"
            android:minHeight="48dp"
            style="@style/editText"/>

        <EditText
            android:id="@+id/editTextNumberDecimal3"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_border"
            android:gravity="center"
            android:hint="@string/sub20203"
            android:importantForAutofill="no"
            android:minHeight="48dp"
            style="@style/editText"/>

        <EditText
            android:id="@+id/editTextNumberDecimal4"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_border"
            android:gravity="center"
            android:hint="@string/sub20204"
            android:importantForAutofill="no"
            android:minHeight="48dp"
            style="@style/editText"/>

        <EditText
            android:id="@+id/editTextNumberDecimal5"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_border"
            android:gravity="center"
            android:hint="@string/sub20205"
            android:importantForAutofill="no"
            android:minHeight="48dp"
            style="@style/editText"/>

        <EditText
            android:id="@+id/editTextNumberDecimal6"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_border"
            android:gravity="center"
            android:hint="@string/sub20206"
            android:importantForAutofill="no"
            android:minHeight="48dp"
            style="@style/editText"/>

        <EditText
            android:id="@+id/editTextNumberDecimal7"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_border"
            android:gravity="center"
            android:hint="@string/sub20207"
            android:importantForAutofill="no"
            android:minHeight="48dp"
            style="@style/editText"/>

        <EditText
            android:id="@+id/editTextNumberDecimal8"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_border"
            android:gravity="center"
            android:hint="@string/sub20208"
            android:importantForAutofill="no"
            android:minHeight="48dp"
            style="@style/editText"/>

        <!-- End of updated EditText views -->

        <Button
            android:id="@+id/button2"
            style="@style/SubmitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:text="@string/button" />

        <TextView
            android:id="@+id/resultview2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_border"
            android:gravity="center"
            android:hint="@string/total"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck"
            style="@style/editText"/>


    </LinearLayout>

</ScrollView>
